<div class="card bg-secondary.bg-gradient mb-3">
  <%= link_to post do %>
    <div class="card-body">
      <h4><%= link_to post.title, post %></h4>

      <div class="text-muted mb-2">
        <em>Por <%= post.author %> (<%= l(post.created_at, format: :long) %>)</em>
      </div>

      <p><%= post.body.truncate(200) %></p>

      <p class="text-muted"><%= pluralize(post.comments.count, 'ComentÃ¡rio') %></p>

      <%= link_to "Ler Artigo", post, class: 'btn btn-success'%>
      <%= link_to "Editar",edit_post_path(post), class: 'btn btn-secondary'%>
      <%= link_to "Remover", post, method: :delete, class: 'btn btn-warning',
        data: {confirm: 'Deseja apagar esse Artigo?' } %>
    </div>
  <% end %>
  
</div>